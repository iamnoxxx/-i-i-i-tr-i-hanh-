<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>TÃ¬nh yÃªu vÃ  sao rÆ¡i âœ¨ðŸ’–</title>
    <style>
        body { background-color: midnightblue; display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0; }
        canvas { border: 1px solid black; }
    </style>
</head>
<body>
    <canvas id="canvas" width="600" height="600"></canvas>
    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');

        // Váº½ trÃ¡i tim
        function drawHeart() {
            ctx.fillStyle = 'red';
            ctx.beginPath();
            ctx.moveTo(300, 400);
            ctx.arc(240, 340, 60, Math.PI, 2.2 * Math.PI);
            ctx.arc(360, 340, 60, Math.PI * 0.8, 2 * Math.PI);
            ctx.lineTo(300, 400);
            ctx.closePath();
            ctx.fill();
        }

        // Váº½ sao
        function drawStar(x, y, size = 10) {
            ctx.fillStyle = 'white';
            ctx.beginPath();
            for (let i = 0; i < 5; i++) {
                ctx.lineTo(x + size * Math.cos((18 + i * 72) * Math.PI / 180), y - size * Math.sin((18 + i * 72) * Math.PI / 180));
                ctx.lineTo(x + size / 2 * Math.cos((54 + i * 72) * Math.PI / 180), y - size / 2 * Math.sin((54 + i * 72) * Math.PI / 180));
            }
            ctx.closePath();
            ctx.fill();
        }

        // Hiá»‡u á»©ng sao rÆ¡i
        function shootingStar() {
            let x = Math.random() * 600 - 300;
            let y = Math.random() * 200 + 100;
            let angle = 0;
            ctx.strokeStyle = 'lightyellow';
            ctx.lineWidth = 2;
            const animate = () => {
                ctx.beginPath();
                ctx.moveTo(x, y);
                ctx.lineTo(x + 20, y + 20);
                ctx.stroke();
                x += 2;
                y += 2;
                angle += 0.02;
                if (x < 600) requestAnimationFrame(animate);
            };
            animate();
        }

        // Váº½ trÃ¡i tim vÃ  cÃ¡c ngÃ´i sao
        drawHeart();
        for (let i = 0; i < 30; i++) {
            let x = Math.random() * 600 - 300;
            let y = Math.random() * 400 - 100;
            let size = Math.random() * 10 + 5;
            drawStar(x + 300, y + 300, size);
        }

        // Táº¡o 5 sao rÆ¡i
        for (let i = 0; i < 5; i++) {
            setTimeout(shootingStar, i * 1000);
        }
    </script>
</body>
</html>
